
.beforeClass {
  width: 750rpx;
  background-color: #eee;
  height: 100%;
}
.beforeClass .beforeClass-main {
  padding: 34rpx 40rpx 0 40rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.beforeClass .images_show {
  overflow: auto;
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 9999999999;
  opacity: 0.9;
  background: rgba(0, 0, 0, 0.7);
}
.beforeClass .images_show .video {
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
      -ms-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
}
.beforeClass .images_show .long_images {
  padding: 0 2%;
  width: 96%;
  padding-top: 2%;
}
.beforeClass .images_show .images_x {
  color: white;
  font-size: 100rpx;
  position: absolute;
  right: 5rpx;
  top: -30rpx;
}


.card {
  width: 672rpx;
  height: 180rpx;
  padding: 52rpx 32rpx 44rpx 140rpx;
  margin-bottom: 34rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  position: relative;
  background-color: #fff;
  border-radius: 48rpx;
  -webkit-box-shadow: 0 6rpx 28rpx #ccc;
          box-shadow: 0 6rpx 28rpx #ccc;
}
.card .card-left-img {
  position: absolute;
  left: 32rpx;
  width: 92rpx;
  height: 92rpx;
  top: 50%;
  -webkit-transform: translate(0, -50%);
      -ms-transform: translate(0, -50%);
          transform: translate(0, -50%);
}
.card .card-right-img {
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  right: 32rpx;
  top: 50%;
  -webkit-transform: translate(0, -50%);
      -ms-transform: translate(0, -50%);
          transform: translate(0, -50%);
}
.card .card-text-title {
  display: block;
  color: #333333;
  font-size: 28rpx;
  margin-bottom: -10rpx;
}
.card .card-text-introduc {
  font-size: 22rpx;
  color: #999999;
}


.beforeClass-btn {
  text-align: center;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 112rpx;
  border-top-right-radius: 30rpx;
  border-top-left-radius: 30rpx;
  -webkit-box-shadow: 0 0 20rpx #bbb;
          box-shadow: 0 0 20rpx #bbb;
